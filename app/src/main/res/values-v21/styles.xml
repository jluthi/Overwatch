<resources>>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- these 2 sets ripple colors -->
        <item name="android:colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:colorEdgeEffect">@color/colorControlHighlight</item>
        <!-- not sure what these does, maybe for performance, may remove them -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>
    <style name="ClickableCardView" parent="android:Widget.TextView">
        <item name="android:foreground">@drawable/selector_card</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:colorAccent">@color/text_title</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textColorPrimary">@color/text_secondary</item>
    </style>
</resources>
