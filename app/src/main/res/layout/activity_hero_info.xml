<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="something.overwatch.HeroInfoActivity"
    android:background="@color/colorAccent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/primary_text"
        android:theme="@style/ToolbarColoredBackArrow"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rectangle">
        <TextView
            android:id="@+id/lbl_hero_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hanzo"
            android:textSize="30sp"
            android:textColor="@color/title_text"
            />
        <TextView
            android:id="@+id/lbl_hero_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_hero_name"
            android:text="Defence"
            android:textColor="@color/primary_text"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rectangle">
        <TextView
            android:id="@+id/lbl_hero_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health: 200"
            android:textColor="@color/primary_text"/>
        <TextView
            android:id="@+id/lbl_hero_armor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_hero_health"
            android:text="Armor: 0"
            android:textColor="@color/primary_text" />
    </RelativeLayout>


</LinearLayout>




