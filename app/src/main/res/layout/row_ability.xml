<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRect">
    <!-- Ability title section -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ability_title_section">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:id="@+id/ability_icon"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_text"
            android:id="@+id/ability_name"
            android:text="ABILITY NAME"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:id="@+id/ability_cd"
            android:text="COOLDOWN s"
            android:layout_row="1"
            android:layout_column="1"/>
    </GridLayout>
    <!-- Ability detail section -->
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRect"
        android:layout_below="@id/ability_title_section">
        <!-- Description of ability-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:id="@+id/ability_description"
                android:text="ABILITY DESCRIPTION"/>
        </TableRow>
        <!-- Stats -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TableRow>
    </TableLayout>
</RelativeLayout>