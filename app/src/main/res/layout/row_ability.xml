<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRect">
    <!-- Icon and Name -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_alert"
            android:id="@+id/ability_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_text"
            android:id="@+id/ability_name"
            android:text="ABILITY NAME" />
    </TableRow>
    <!-- Description of ability-->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:id="@+id/ability_description"
            android:text="ABILITY DESCRIPTION"/>
    </TableRow>
    <!-- Stats, idk how to design this part -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TableRow>
</TableLayout>
