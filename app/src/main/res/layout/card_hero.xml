<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_hero"
    card_view:cardBackgroundColor="@color/colorRect"
    style="@style/CardViewStyle"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/pic_hero_card"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:minWidth="70dp"
            android:minHeight="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_hero_name_card"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/pic_hero_card"
            android:layout_toRightOf="@id/pic_hero_card"
            android:textColor="@color/text_card"
            android:text="SOMETHING"
            android:textSize="17sp"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:id="@+id/pic_hero_class_card"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
